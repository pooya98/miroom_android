<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Book_page">

    <TextView
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="회의실 정보"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30sp"></TextView>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="    회의실 명"
            android:textSize="18sp"
            android:textColor="#000"></TextView>

        <TextView
            android:id="@+id/TV_room_name"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="공대 구호관"
            android:layout_height="match_parent"
            android:background="#C4C8E3"
            android:textSize="18sp"
            android:layout_margin="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="    회의실 규모"
            android:textColor="#000"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/TV_room_size"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="공대 구호관"
            android:layout_height="match_parent"
            android:background="#C4C8E3"
            android:textSize="18sp"
            android:layout_margin="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="    회의실 장비"
            android:textColor="#000"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/TV_room_util"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="공대 구호관"
            android:layout_height="match_parent"
            android:background="#C4C8E3"
            android:textSize="18sp"
            android:layout_margin="10dp"></TextView>

    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"></TextView>

    <TextView
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="현재 예약 정보"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30sp"></TextView>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="    예약 일자"
            android:textColor="#000"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/TV_reserv_date"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="공대 구호관"
            android:layout_height="match_parent"
            android:background="#C4C8E3"
            android:textSize="18sp"
            android:layout_margin="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="    예약 시간"
            android:textColor="#000"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/TV_reserv_time"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="공대 구호관"
            android:layout_height="match_parent"
            android:background="#C4C8E3"
            android:textSize="18sp"
            android:layout_margin="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="    예약자"
            android:textColor="#000"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/TV_reserver"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="공대 구호관"
            android:layout_height="match_parent"
            android:background="#C4C8E3"
            android:textSize="18sp"
            android:layout_margin="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="    예약인원"
            android:textColor="#000"
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/TV_reserve_num"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="0dp"
            android:text=""
            android:layout_height="match_parent"
            android:background="#C4C8E3"
            android:textSize="18sp"
            android:maxLength="3"
            android:layout_margin="10dp"
            android:enabled="false"></EditText>

    </LinearLayout>





    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></TextView>

    <Button
        android:layout_weight="1"
        android:id="@+id/reservation_bt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusable="true"
        android:background="#FFA7A7"
        android:text="예약 불가"
        android:textColor="#44546A"
        android:textSize="30sp"
        android:enabled="false"/>

    <TextView
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"></TextView>

</LinearLayout>